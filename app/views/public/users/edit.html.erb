
<div style="margin-bottom:100px; margin-top:50px; font-family: dot-text;">

<h1 class="page_title">会員情報編集</h1>

<%= form_with model: @user, url: users_edit_path(@user.id), method: :patch do |f| %>

  <div id="new_form_group">
  <div class="new_image">
    <%= f.label "プロフィール画像" %><br>
    <%= f.file_field :profile, accept: "image/*" %>
  </div>

  <div class="edit_params">
    <%= f.label "ニックネーム" %>
    <%= f.text_field :name, autofocus: true, style: "margin-left:80px;" %>
  </div>


  <div class="edit_params">
    <%= f.label "年齢" %>
    <%= f.text_field :age, style: "margin-left:160px;" %>歳
  </div>

  <div class="edit_params">
    <%= f.label "よくプレイするゲーム" %>
    <%= f.text_field :game_title %>
  </div>

  <div class="edit_params">
    <%= f.label "よく遊ぶ時間帯　　　" %>
    <%= f.select :play_time, [["平日昼間","平日昼間"], ["平日夜間","平日夜間"], ["土日昼間","土日昼間"], ["土日夜間","土日夜間"], ["不定期","不定期"]] %>
  </div>
  
  </div>

  <div style="margin-left:400px; margin-top:40px;">
    <%= f.submit "保存する" %>
     <%= link_to "退会する", users_withdraw_path(@user.id), style: "margin-left:100px; text-decoration: none;" %>
  </div>
  
<% end %>
 
 </div>