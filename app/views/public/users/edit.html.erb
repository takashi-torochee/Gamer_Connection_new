<h1>会員情報編集</h1>

<%= form_with model: @user, url: users_edit_path(@user.id), method: :patch do |f| %>
  <div class="field">
    <%= f.label "プロフィール画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>


  <div class="field">
    <%= f.label "ニックネーム" %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "年齢" %>
    <%= f.text_field :age %>歳
  </div>

  <div class="field">
    <%= f.label "よくプレイするゲーム" %>
    <%= f.text_field :game_title %>
  </div>

  <div class="field">
    <%= f.label "よく遊ぶ時間帯" %>
    <%= f.select :play_time, [["平日昼間","平日昼間"], ["平日夜間","平日夜間"], ["土日昼間","土日昼間"], ["土日夜間","土日夜間"], ["不定期","不定期"]] %>
  </div>

  <div class="actions">
    <%= f.submit "保存する" %>
  </div>
<% end %>