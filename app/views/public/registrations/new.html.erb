<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "プロフィール画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>


  <div class="field">
    <%= f.label "ニックネーム" %>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>（6桁以上）</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "年齢" %>
    <%= f.text_field :age %>歳
  </div>

  <div class="field">
    <%= f.label "よくプレイするゲーム" %>
    <%= f.text_field :game_title %>
  </div>

  <div class="field">
    <%= f.label "よく遊ぶ時間帯" %>
    <%= f.select :play_time, [["平日昼間","平日昼間"], ["平日夜間","平日夜間"], ["土日昼間","土日昼間"], ["土日夜間","土日夜間"], ["不定期","不定期"]] %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
